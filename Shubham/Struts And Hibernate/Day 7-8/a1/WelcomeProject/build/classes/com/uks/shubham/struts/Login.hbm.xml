<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
 <class name="LoginBean" table="userdetails">
 <id name="uid" column="uid" type="int">
 <generator class="assigned"/>
 </id>
<property column="salulation" name="salulation" type="string" />
<property column="firstname" name="firstname" type="string" />
<property column="middleinitial" name="middleinitial" type="string" />
<property column="lastname" name="lastname" type="string" />
<property column="gender" name="gender" type="string" />
<property column="email" name="email" type="string" />
<property column="dob" name="dob" type="date" />
<property column="address" name="address" type="string" />
<property column="userid" name="userid" type="string" />
<property column="password" name="password" type="string" />
<property column="areaofinterest" name="areaofinterest" type="Blob" />
<property column="otherinterest" name="otherinterest" type="string" />
<property column="category" name="category" type="string" />
</class>
</hibernate-mapping>